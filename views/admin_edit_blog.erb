<h1>تعديل التدوينة</h1>
<form action="/admin/edit_blog/<%= @blog[:id] %>" method="post">
    <div class="form-group">
        <label>عنوان التدوينة</label>
        <input type="text" name="title" value="<%= @blog[:title] %>" class="form-control">
    </div>
    <div class="form-group">
        <label>مختصر التدوينة</label>
        <textarea name="summary" class="form-control"><%= @blog[:summary] %></textarea>
    </div>
    <div class="form-group">
        <label>محتوى التدوينة</label>
        <textarea name="content" class="form-control"><%= @blog[:content] %></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="تعديل التدوينة" class="btn btn-primary">
    </div>    
</form>